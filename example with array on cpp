#include <iostream>
using namespace std;

class Stack {
    int arr[5], top = -1; // Массив и указатель вершины
public:
    void push(int x) { arr[++top] = x; } // Добавляем элемент
    void pop() { top--; }                // Удаляем элемент
    int peek() { return arr[top]; }      // Посмотреть верхний элемент
    bool empty() { return top == -1; }   // Проверка на пустоту
};

int main() {
    Stack s;
    s.push(10); s.push(20); s.push(30);
    cout << "Верхний: " << s.peek() << endl; // 30
    s.pop();
    cout << "Новый верхний: " << s.peek();   // 20
    return 0;
}
